@model BudgetStatus.Models.Bdgfixmonth

@{
    ViewData["Title"] = "Edit Budget";
}

<h1>@ViewBag.Title</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Counter" />
            <div class="form-group">
                <label asp-for="Byear" class="control-label">Year</label>
                @*<input asp-for="Byear" class="form-control" />*@
                <select asp-for="Byear" class="form-control" asp-items="ViewBag.Byear"></select>
                <span asp-validation-for="Byear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bbudget" class="control-label">Type</label>
                @*<input asp-for="Bbudget" class="form-control" />*@
                <select asp-for="Bbudget" class="form-control" asp-items="ViewBag.Bbudget"></select>
                <span asp-validation-for="Bbudget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Blongmonth" class="control-label">Month</label>
                    <select asp-for="Blongmonth" class="form-control" asp-items="ViewBag.Blongmonth">
                        <option value="January">January</option>
                        <option value="February">February</option>
                        <option value="March">March</option>
                        <option value="April">April</option>
                        <option value="May">May</option>
                        <option value="June">June</option>
                        <option value="July">July</option>
                        <option value="August">August</option>
                        <option value="September">September</option>
                        <option value="October">October</option>
                        <option value="November">November</option>
                        <option value="December">December</option>
                    </select>
                <span asp-validation-for="Blongmonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Closed" class="control-label">Current state</label>
                @*<select asp-for="Closed" class="form-control" asp-items="ViewBag.Closed"></select>*@
                <select asp-for="Closed" class="form-control">
                    <option value="0">Open</option>
                    <option value="1">Closed</option>
                </select>
                <span asp-validation-for="Closed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Current" class="control-label">Current</label>
                <select asp-for="Current" class="form-control" asp-items="ViewBag.Current"></select>
                <span asp-validation-for="Current" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
